---
import { type HTMLAttributes } from "astro/types";
import "@/globals.css";
const { tag, classes, size, font, ...rest } = Astro.props;
const Tag = tag;

interface Props extends HTMLAttributes<"h1"> {
  tag: string;
  size: keyof typeof headingSizes;
  classes?: string;
  font: keyof typeof headingFonts;
}

const headingSizes = {
  xs: "xs",
  base: "base",
  md: "md",
  lg: "lg",
  xl: "xl",
  "2xl": "two_xl",
  "3xl": "three_xl",
  "4xl": "four_xl",
};

const headingFonts = {
  sans: "sans",
  serif: "serif",
};
---

<Tag {...rest} class:list={["base", headingSizes[size], headingFonts[font], classes]}>
  <slot />
</Tag>

<style is:global>
  .base {
    line-height: var(--line-height-heading);
  }

  .xs {
    font-size: var(--text-xs);
  }

  .base {
    font-size: var(--text-base);
  }

  .md {
    font-size: var(--text-md);
  }

  .lg {
    font-size: var(--text-lg);
  }

  .xl {
    font-size: var(--text-xl);
  }

  .two_xl {
    font-size: var(--text-2xl);
  }

  .three_xl {
    font-size: var(--text-3xl);
  }

  .four_xl {
    font-size: var(--text-4xl);
  }

  .sans {
    font-family: var(--font-sans);
  }

  .serif {
    font-family: var(--font-serif);
  }
</style>
